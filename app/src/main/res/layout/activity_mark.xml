<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".activity.MarkActivity">

    <ImageView
        android:id="@+id/editpic_cancle"
        android:layout_width="@dimen/editpic_buttonsize"
        android:layout_height="@dimen/editpic_buttonsize"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_edit_cancle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/editpic_draw"
        android:layout_width="@dimen/editpic_buttonsize"
        android:layout_height="@dimen/editpic_buttonsize"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/icon_edit_draw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/editpic_text"
        android:layout_width="@dimen/editpic_buttonsize"
        android:layout_height="@dimen/editpic_buttonsize"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/icon_edit_text"
        app:layout_constraintEnd_toStartOf="@+id/editpic_draw"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Please mark and name a spot in the floorplan for\nbuilding the inspection form in that area"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editpic_text" />
</androidx.constraintlayout.widget.ConstraintLayout>